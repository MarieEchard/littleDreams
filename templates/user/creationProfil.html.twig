{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}Inscription - LittleDreams{% endblock %}

{% block body %}
    <h1 class="display-6 text-center">Inscription</h1>

    <div class="d-flex justify-content-center">
        <div class="border border-0 rounded p-3"
             style="
                margin-top: 1rem;
                margin-bottom: 1rem;
                background-color: rgba(255,255,255,0.16);
                "
        >
            {{ form_start(form) }}

            {{ form_row(form.nom) }}
            {{ form_row(form.prenom) }}
            {{ form_row(form.telephone) }}
            {{ form_row(form.email) }}
            {{ form_row(form.plainPassword) }}
            {{ form_row(form.photo) }}
            {{ form_row(form.nomSociete) }}

{#            {% if is_granted('ROLE_ADMIN') %}#}
{#                {{ form_row(form.estAdministrateur) }}#}
{#            {% endif %}#}

            {% if not is_granted('ROLE_ADMIN') %}
                {{ form_row(form.noRue) }}
                {{ form_row(form.rue) }}
                {{ form_row(form.codePostal) }}
                {{ form_row(form.ville) }}
            {% endif %}

            {{ form_widget(form.return) }} {{ form_widget(form.submit) }}

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}