{% extends 'base.html.twig' %}

{% block title %}Profil - Sortie.com{% endblock %}

{% block body %}

    <div class="container d-flex justify-content-center">
        <div class="card mb-3 custom-card" style="width: 30rem; ">
            <div class="row g-0">
                <div class="col-md-4">
                    {% if user.photo %}
                        <img src="{{ asset(photo_dir ~ '/' ~ user.photo) }}" class="card-img-top" alt="image"
                             loading="lazy"/>
                    {% else %}
                        <img src="{{ asset(photo_dir ~ '/placeholder_profil_img.png') }}" class="card-img-top"
                             alt="image"
                             loading="lazy"/>
                    {% endif %}
                    <div class="container-fluid d-flex justify-content-center">
                        {% if is_granted('ROLE_ADMIN') %}
                            <p class="card-text fst-italic">[ {{ user.roles[0] }} ]</p>
                        {% endif %}
                    </div>

                </div>
                <div class="col-md-8">
                    <div class="card-header"><h5 class="card-title">Mon Profil</h5></div>
                    <div class="card-body">

                        <p class="card-text">Nom : {{ user.nom }}</p>
                        <p class="card-text">Prenom : {{ user.prenom }}</p>
                        <p class="card-text">Téléphone : {{ user.telephone }}</p>
                        <p class="card-text">Email : {{ user.email }}</p>
                        <p class="card-text">Nom de votre société : {{ user.nomSociete }}</p>
                        <p class="card-text">Adresse sociale</p>
                        <p class="card-text">N° de rue : {{ user.noRue }}</p>
                        <p class="card-text">Rue : {{ user.rue }}</p>
                        <p class="card-text">Code Postal : {{ user.codePostal }}</p>
                        <p class="card-text">Ville : {{ user.ville }}</p>


                        <div>
                            <a class="btn btn-primary" type="button"
                               href="{{ path('app_profil_modifier', {'id': user.id }) }}">
                                <i class="bi bi-feather"></i>
                            </a>

                            <a href="{{ path('app_profil_supprimer', {'id': user.id}) }}" class="btn btn-danger"
                               onclick="return confirmDelete();">
                                <i class="bi bi-trash"></i>
                            </a>
                            <script>
                                function confirmDelete() {
                                    return confirm("Etes-vous sûr de vouloir supprimer votre compte?");
                                }
                            </script>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
