{% extends 'base.html.twig' %}



{% block title %}Question - LittleDreams{% endblock %}

{% block body %}
    <div class="background">
        <img src="{{ asset('img/MainIAv2.png') }}" alt="image IA" style="height: 100%; width: 100%">
    </div>
    <div class="d-flex justify-content-center">
        <div class="border border-0 rounded p-4 form-custom">
            <h1 class="display-6 text-center">Poser Une Question</h1>
            <form method="post">
                <div class="form-group">
                    <label for="nom">Votre nom :</label>
                    <input type="text" id="nom" name="question[nom]" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="email">E-mail :</label>
                    <input type="email" id="email" name="question[email]" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="question">Quelle est votre question :</label>
                    <textarea id="question" name="question[question]" class="form-control" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Envoyer</button>
                <a href="{{ path('app_littledreams') }}" class="btn btn-secondary">Retour</a>
            </form>
        </div>
    </div>


{% endblock %}