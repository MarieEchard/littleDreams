{% extends 'base.html.twig' %}

{% block title %}Question - LittleDreams{% endblock %}

{% block body %}
    <div class="background">
        <img src="{{ asset('img/MainIAv2.png') }}" alt="image IA" style="height: 100%; width: 100%">
    </div>
    <div class="d-flex justify-content-center">
        <div class="border border-0 rounded p-4 form-custom">
            <h1 class="display-6 text-center">Poser Une Question</h1>
            <br>
            <form method="post">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.email) }}
                </div>
                <br>
                <div class="form-group">
                    {{ form_row(form.question) }}
                </div>
                <br>
                {{ form_widget(form.submit) }} {{ form_widget(form.return) }}
                {{ form_end(form) }}
            </form>
        </div>
    </div>


{% endblock %}