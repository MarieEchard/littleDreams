{% extends 'base.html.twig' %}

{% block title %}Validation rendez-vous - LittleDreams{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center">
        <div class="background">
            <img src="{{ asset('img/TechBleu.png') }}" alt="image IA" style="height: 100%; width: 100%">
        </div>
        <div class="mb-3 custom-card-profile">
            <div class="row g-0">
                <div class="col-md-4 custom-sidebar">
                    <ul>
                        <li><a href="{{ path('app_profil', {'id': app.user.id }) }}">Mon Profil</a></li>
                        <hr>
                        <li><a href="{{ path('app_profil_creer') }}">Créer un administrateur</a></li>
                        <hr>
                        <li><a href="{{ path('app_services') }}">gestion des services</a></li>
                        <hr>
                        <li><a href="{{ path('app_portfolio_creer_item') }}">création Item</a></li>
                        <hr>
                        <li><a href="{{ path('app_question_reponse') }}">Repondre aux questions</a></li>
                        <hr>
                        <li>validation rendez vous</li>
                        <hr>
                        <li><a href="{{ path('app_devis_validation_liste') }}">validation devis</a></li>
                        <hr>
                        <li><a href="{{ path('app_projet_valides') }}">projets en cours</a></li>
                    </ul>
                </div>

                <div class="col-md-8">
                    <div class="card-header card-header-custom text-center">
                        <h5 class="card-title mb-0">Validation rendez-vous</h5>
                    </div>
                    <div class="card-body m-3">
                        {% if rendezVousEnAttente is not empty %}
                            <ul>
                                {% for rendezVous in rendezVousEnAttente %}
                                    <li>
                                        {{ rendezVous.dateHeure|date('Y-m-d H:i') }} - {{ rendezVous.raison }}
                                        <form action="{{ path('app_rendezvous_valider', {'id': rendezVous.id}) }}" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-success btn-sm submit-button">Valider</button>
                                        </form>
                                        <form action="{{ path('app_rendezvous_refus', {'id': rendezVous.id}) }}" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-danger btn-sm">Refuser</button>
                                        </form>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <p>Aucun rendez-vous en attente.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}