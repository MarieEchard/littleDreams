<!DOCTYPE html>
<html lang="fr" xml:lang="fr" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Studios Little Dreams{% endblock %}</title>
    <link rel="icon" href="{{ asset('img/LogoBlanc.png') }}">

    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    {% endblock %}

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body>

<header class="flex-wrap justify-content-center">
    <nav class="navbar navbar-expand-lg navbar-light bg-light nav"
    >
        <div class="container-fluid">
            <a class="navbar-brand display-6" href="{{ path('app_littledreams') }}">
                <img src="{{ asset('img/Logo300x200.png') }}" alt="logo" width="50"
                     class="d-inline-block align-text-center">
                Studio Little Dreams
            </a>
                        {% if is_granted('IS_AUTHENTICATED') %}
                            <span>Bienvenue {{ app.user.nom }} {{ app.user.prenom }} [{% for role in app.user.roles %} {{ role }} {% endfor %}]</span>
                        {% endif %}
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav d-flex gap-2 ms-auto mb-2 mb-lg-0">
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="btn btn-sm btn-outline-secondary">
                            <a class="nav-link" href="{{ path('app_question_liste') }}">Les Questions</a>
                        </li>
                        <li class="btn btn-sm btn-outline-secondary">
                            <a class="nav-link" href="{{ path('app_rendezvous_liste') }}">validation Rendez-Vous</a>
                        </li>
                        <li class="btn btn-sm btn-outline-secondary">
                            <a class="nav-link" href="{{ path('app_demandedevis_liste') }}">Validation Devis</a>
                        </li>
                        <li class="btn btn-sm btn-outline-secondary">
                            <a class="nav-link" href="{{ path('app_profil_creer') }}">Creer Administrateur</a>
                        </li>


                    {% endif %}
                    {% if is_granted('IS_AUTHENTICATED') %}
                        <li class="btn btn-sm btn-outline-secondary">
                            <a class="nav-link"
                               href="{{ path('app_profil', {'id' : app.user.id }) }}">Profil</a>
                        </li>
                        <li class="btn btn-sm btn-outline-secondary">
                            <a class="nav-link" href="{{ path('app_question') }}">Poser une question</a>
                        </li>
                        <li class="btn btn-sm btn-outline-secondary">
                            <a class="nav-link" href="{{ path('app_rendezvous') }}">rendez-vous</a>
                        </li>
                        <li class="btn btn-sm btn-outline-secondary">
                            <a class="nav-link" href="{{ path('app_devis') }}">Devis</a>
                        </li>
                        <li class="btn btn-sm btn-outline-danger">
                            <a class="nav-link" href="{{ path('app_logout') }}">Deconnexion</a>
                        </li>

                    {% else %}

                        <li class="btn btn-sm btn-outline-secondary">
                            <a class="nav-link" href="{{ path('app_question') }}">Poser une question</a>
                        </li>
                        <li class="btn btn-sm btn-outline-secondary">
                            <a class="nav-link" href="{{ path('app_login') }}">rendez-vous</a>
                        </li>
                        <li class="btn btn-sm btn-outline-secondary">
                            <a class="nav-link" href="{{ path('app_login') }}">Devis</a>
                        </li>

                        <li class="btn btn-sm btn-outline-primary"><a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                        </li>
                        <li class="btn btn-sm btn-outline-primary"><a class="nav-link" href="{{ path('app_profil_creer') }}">Inscription</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
</header>

<div>
    {# Messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show flash-message" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"
                        aria-label="Close">
                </button>
            </div>
        {% endfor %}
    {% endfor %}
</div>

<div class="">
    {% block body %}

    {% endblock %}
</div>

<footer class="bg-light text-center fixed-bottom">
    <div class="text-center p-2">
        <div class="container">
            {% set year = "now"|date('Y') %}
            <small class="text-muted">&copy; {{ year }} Little Dreams</small>
        </div>
    </div>
</footer>
</body>
</html>
